{
  "name": "Dcraw test to DCI-P3 Lin TIFF",
  "tasks": [
    {
      "id": "@1",
      "name": "Convert to DCI-P3 Linear TIFF using dcraw",
      "command": "/Volumes/Build/github/3rdparty/build/macosx/arm64.debug/bin/dcraw_emu",
      "extension": "%inputext%.tiff",
      "arguments": "-T -4 -h -W -o 7 -q 3 -H 0 -b 1.0 -6 %inputfile%",
      "startin": "/Volumes/Build/github/3rdparty/build/macosx/arm64.debug/bin",
      "documentation": [
        "-T, write TIFF instead of PPM",
        "-4, Linear 16-bit",
        "-h, Half-size color image",
        "-w, Don't automatically brighten the image",
        "-o, Output colorspace is DCI-P3",
        "-q, AHD interpolation preserving the homogeneity of the color regions",
        "-H, Clip highlights",
        "-b, Adjust brightness standard 1.0",
        "-6, Write 16-bit output"
      ]
    }
  ]
}